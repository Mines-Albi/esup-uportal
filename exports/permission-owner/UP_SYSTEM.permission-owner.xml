<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<permission-owner xmlns="https://source.jasig.org/schemas/uportal/io/permission-owner" xmlns:ns2="https://source.jasig.org/schemas/uportal/io/user" xmlns:ns3="https://source.jasig.org/schemas/uportal/io/subscribed-fragment" xmlns:ns4="https://source.jasig.org/schemas/uportal/io/stylesheet-descriptor" xmlns:ns5="https://source.jasig.org/schemas/uportal/io/event-aggregation" xmlns:ns6="https://source.jasig.org/schemas/uportal/io/portlet-type" xmlns:ns7="https://source.jasig.org/schemas/uportal/io/portlet-definition" xmlns:ns8="https://source.jasig.org/schemas/uportal" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.0" xsi:schemaLocation="https://source.jasig.org/schemas/uportal/io/permission-owner https://source.jasig.org/schemas/uportal/io/permission-owner/permission-owner-4.0.xsd">
    <name>uPortal System</name>
    <fname>UP_SYSTEM</fname>
    <desc>Permissions controlling the base uPortal system</desc>
    <activity>
        <name>Add Tab</name>
        <fname>ADD_TAB</fname>
        <desc>Allow the user to add a layout tab</desc>
        <targetProvider>portalSystemTargetProvider</targetProvider>
    </activity>
    <activity>
        <name>Superuser</name>
        <fname>ALL_PERMISSIONS</fname>
        <desc>Receive *any* portal permission.  This permission covers all 
        permissions for all systems, is not blockable, and is only intended
        to be granted to superusers.</desc>
        <targetProvider>portalSystemTargetProvider</targetProvider>
    </activity>
    <activity>
        <name>Customize</name>
        <fname>CUSTOMIZE</fname>
        <desc>Allows access to the Customize menu in the UI</desc>
        <targetProvider>portalSystemTargetProvider</targetProvider>
    </activity>
</permission-owner>
